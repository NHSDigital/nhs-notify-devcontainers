{
    "name": "nhs-notify-devcontainer-${localEnv:CONTAINER_NAME}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "CONTAINER_NAME": "${localEnv:CONTAINER_NAME}",
            "BASE_CONTAINER_NAME": "${localEnv:BASE_CONTAINER_NAME}",
            "BASE_IMAGE_TAG": "${localEnv:BASE_IMAGE_TAG}",
            "BASE_CONTAINER_PREFIX": "${localEnv:BASE_CONTAINER_PREFIX}"
        }
    },
    "postCreateCommand": "echo ${localEnv:CONTAINER_NAME} Created",
    "postStartCommand": "echo ${localEnv:CONTAINER_NAME} Started",
    "runArgs": [
        "--platform=linux/amd64"
    ],
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/python:1.7.1": {
            "version": "3.13.8",
            "installTools": true
        },
        "ghcr.io/devcontainers-extra/features/zsh-plugins:0.0.5": {
            "omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-syntax-highlighting.git https://github.com/MichaelAquilina/zsh-you-should-use.git",
            "plugins": "git ssh-agent gpg-agent python ubuntu ruby jsontools sudo bundler direnv gitignore encode64 gem copypath copyfile terraform dirhistory aliases z docker asdf aws emoji zsh-you-should-use zsh-autosuggestions zsh-syntax-highlighting"

          
        },
        "ghcr.io/devcontainers/features/aws-cli:1.1.2": {
            "version": "2.31.18"
        },
        "ghcr.io/devcontainers/features/common-utils:2.5.4": {
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "installOhMyZshConfig": true,
            "installZsh": true,
            "upgradePackages": true,
            "userGid": "automatic",
            "userUid": "automatic",
            "username": "automatic"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2.12.4": {
            "azureDnsAutoDetection": true,
            "dockerDashComposeVersion": "2.40.1",
            "installDockerBuildx": true,
            "installDockerComposeSwitch": true,
            "moby": true,
            "version": "28.5.1"
        },
        "ghcr.io/devcontainers/features/github-cli:1.0.15": {
            "installDirectlyFromGitHubRelease": true,
            "version": "2.82.0"
        },
        "ghcr.io/devcontainers/features/node:1.6.3": {
            "nodeGypDependencies": true,
            "nvmVersion": "0.40.3",
            "version": "22.21.0"
        },
        "ghcr.io/devcontainers/features/ruby:1.3.2": {
            "version": "3.4.7"
        },
        "ghcr.io/devcontainers/features/go:1.3.2": {
            "version": "1.25.3"
        }
    }
}